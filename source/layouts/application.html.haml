!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "The Middleman"
    / Typekit
    %script{:src => "https://use.typekit.net/tug4ddf.js"}
    :javascript
      try{Typekit.load({ async: true });}catch(e){}
    = stylesheet_link_tag "http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css"
    = stylesheet_link_tag "application"
  %body.site{class: page_classes}
    = partial "partials/nav"
    %main.site-content
      = yield
    = partial "partials/footer"
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js"
    = javascript_include_tag "application"
